@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center text-panda">Register</h1>
<hr class="bg-panda w-50" style="height: 2px" />
<form class="w-50 mx-auto" method="POST">
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Username" class="font-weight-bold">Username</label>
            </div>
            <input type="text" class="form-control" id="username" asp-for="Input.Username" placeholder="Username..." />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Email" class="font-weight-bold">Email</label>
            </div>
            <input type="email" class="form-control" id="email" asp-for="Input.Email" placeholder="Email..." />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Password" class="font-weight-bold">Password</label>
            </div>
            <input type="password" class="form-control" id="password" asp-for="Input.Password" placeholder="Password..." />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.ConfirmPassword" class="font-weight-bold">Confirm Password</label>
            </div>
            <input type="password" class="form-control" id="confirmPassword" asp-for="Input.ConfirmPassword" placeholder="Confirm Password..." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <hr class="bg-panda w-100" style="height: 2px" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.FirstName" class="font-weight-bold">First Name</label>
            </div>
            <input type="text" class="form-control" id="firstName" asp-for="Input.FirstName" placeholder="First Name..." />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.LastName" class="font-weight-bold">Last Name</label>
            </div>
            <input type="text" class="form-control" id="lastName" asp-for="Input.LastName" placeholder="Last Name..." />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="form-group w-100">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.UniversalCitizenNumber" class="font-weight-bold">Universal Citizen Number</label>
            </div>
            <input type="text" class="form-control" id="universalCitizenNumber" asp-for="Input.UniversalCitizenNumber" placeholder="Universal Citizen Number..." />
            <span asp-validation-for="Input.UniversalCitizenNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-3">
        <button type="submit" class="btn bg-panda text-white" style="background: black">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}